!!!
%html{:lang => "en-US"}
  %head
    %meta{:charset => "UTF-8"}
      %title Scaffy framework
      = stylesheet_link_tag "futurico"
  %body
    %img.background-light{:src => "/assets/futurico/background-light.png"}

    .container
      = render :partial => "static/futurico/header"

      .content
        .wrapper.clearfix
          .col1of4
            = render :partial => "static/futurico/text_inputs"
            = render :partial => "static/futurico/buttons"
            = render :partial => "static/futurico/scrollboxes"
            = render :partial => "static/futurico/selects"
            = render :partial => "static/futurico/checkboxes"

          .futurico-content.last-col
            .mbl.pbl
              = render :partial => "static/futurico/tabbox"
            .mbl.pbl.clearfix
              .col1of6
                = render :partial => "static/futurico/crossbar"
              .col1of3
                = render :partial => "static/futurico/currently-playing"
              .left
                .mll.pll
                  = render :partial => "static/futurico/commutators"
              .last-col
                .mll.pll
                  = render :partial => "static/futurico/user-slug"

            .mbl.pbl.clearfix
              =render :partial => "static/futurico/stickers"
              .col1of3
                =render :partial => "static/futurico/starbar"

